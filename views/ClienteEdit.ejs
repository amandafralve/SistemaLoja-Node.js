<%- include('partials/navbar.ejs') %>

<br>
<div class="container">
    <div class="card">
        <div class="card-header">
            <h1>Alterar Clientes</h1>
        </div>
        <div class="card-body">
            <form action="/clientes/update" method="post">
                <label>Nome Cliente</label>
                <input type="text" name="nome" value="<%= client.nome %>" class="form-control" required>
                <label>Cpf do Cliente</label>
                <input type="text" name="cpf" value="<%= client.cpf %>"  class="form-control" required>
                <label>Endereco do Cliente</label>
                <input type="text" name="endereco" value="<%= client.endereco %>"  class="form-control" required>
                <br>
                <input type="hidden" name="id" value="<%= client.id %>" >
                <input type="submit" value="Alterar" class="btn btn-warning" onclick="return confirm('Deseja alterar dados do cliente <%= client.nome %>?')">
            </form>
        </div>
    </div>
</div><br>


